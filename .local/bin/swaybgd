#! /bin/sh
wallpaper_dir=$HOME/wallpapers
interval=900

if [ ! -d $wallpaper_dir ]; then
    notify-send "$wallpaper_dir not exists"
fi
if [ "$(find $wallpaper_dir -type f -name "*.jpg" -o -name "*.png" | wc -l)" -eq 0 ]; then
    notify-send "no wallpapers found in $wallpaper_dir"
    exit 0
fi


bg_pid=0
sleep_pid=0
cleanup() {
    if [ $bg_pid -gt 0 ]; then
        kill $gb_pid > /dev/null
    fi
    if [ $sleep_pid -gt 0 ]; then
        kill $sleep_pid > /dev/null
    fi
    killall swaybg > /dev/null
    exit 0
}
trap 'cleanup' SIGTERM


while true; do
    file=$(find $wallpaper_dir -type f -name "*.jpg" -o -name "*.png" | sort -R | head -n 1 | tr -d "\n")
    swaybg -i $file &
    bg_pid=$!
    sleep $interval &
    sleep_pid=$!
    wait $sleep_pid
    kill $pid 2> /dev/null
    wait $pid 2> /dev/null
done
